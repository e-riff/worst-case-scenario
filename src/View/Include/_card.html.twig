<div class="card shadow height-card h-100">

	<div class="img-size-index">
		<img class="card-img-top d-block rounded" src="/uploads/{{ item.image }}" alt="Card image cap">
	</div>
	<div class="card-body d-flex flex-column align-items-center justify-content-between">
		<div>
			<h5 class="card-title text-center mb-2">{{ item.name }}</h5>
			<!-- <p class="card-region">{{item.regions}}</p> -->
			<p class="card-postcode">{{item.postcode}}</p>
			<p class="card-category">{{categories.0.name}}</p>
			<p class="card-address">{{item.address}}</p>
			<p class="card-text">{{item.description}}</p>
		</div>
		<div class="count mx-auto mt-3">
			<a data-item="{{item.id}}" data-val="-1" href=" #">
				<img class="unicorn" {% if item.good_or_bad == -1 %} src="/assets/images/unicorn.png" {% else %} src="/assets/images/unicornBW.png" {% endif %}>
			</a>
			<p data-item="{{item.id}}" class="counter">{{item.favSum}}</p>
			<a data-item="{{item.id}}" data-val="1" href="#">
				<img class="poop" {% if item.good_or_bad == 1 %} src="/assets/images/pooFull.png" {% else %} src="/assets/images/pooEmpty.png" {% endif %}>
			</a>
		</div>
		<a href="/itemDetails?id={{item.id}}" type="button" class="btn btn-lg my-3 text-center stretched-link">
			En voir plus</a>
	</div>

</div>
